<section class="flex-wrap">
    <h2 class="flex-wrap-header">Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-text">Text</label>
            <textarea id="post-text" name="post-text"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section class="flex-wrap" id="your-posts">
    <h2 class="flex-wrap-header">Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            <a class="edit-post" href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
            {{> post-info post}}
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>